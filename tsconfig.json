{
	"compilerOptions": {
		"module": "commonjs",
		"esModuleInterop": true,
		"target": "es6",
		"noImplicitAny": true,
		"moduleResolution": "node",
		"sourceMap": true,
		"outDir": "build",
		"baseUrl": "src",
		"allowSyntheticDefaultImports": true,
		"lib": ["es6", "dom"]
	},
	"include": ["src/**/*"]
}
